{
  "name": "task-aggregator-mern",
  "version": "1.0.0",
  "description": "A task list generator",
  "main": "index.js",
  "engines": {
    "node": "16.x",
    "yarn": "1.x"
  },
  "repository": "https://github.com/DamienBates/Task-Organiser-MERN.git",
  "author": "DamienBates <80431557+DamienBates@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "cd ./client && yarn start",
    "server": "cd ./server && yarn nodemon server.ts",
    "client": "cd ./client && react-scripts start",
    "dev": "concurrently \"yarn run server\" \"yarn run ./client\"",
    "build": "cd ./client && yarn build"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "concurrently": "^7.0.0",
    "express": "^4.16.4",
    "nodemon": "^2.0.15",
    "react-scripts": "^5.0.0"
  }
}